<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="20dp"
        android:background="@color/material_dynamic_primary90"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="30sp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/taskSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task subtitle"
                android:layout_below="@+id/taskTitle"
                android:layout_marginBottom="3dp"
                android:layout_alignStart="@+id/taskTitle"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_below="@+id/taskSubtitle"
                android:layout_marginBottom="3dp"
                android:layout_alignStart="@+id/taskTitle"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/dateNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12-5-23"
                android:layout_below="@+id/date"
                android:layout_marginBottom="3dp"
                android:layout_alignStart="@+id/taskTitle"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/time"
                android:text="Time"
                android:layout_alignEnd="@+id/dateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskSubtitle"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:layout_marginRight="45dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/timeNum"
                android:text="7:20 AM"
                android:layout_alignEnd="@+id/dateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_alignStart="@+id/time"/>

            <TextView
                android:id="@+id/category"
                android:text="Category"
                android:layout_alignEnd="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:layout_alignStart="@+id/time"
                android:fontFamily="serif"/>

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.carousel.MaskableFrameLayout>